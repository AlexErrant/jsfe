{
  "name": "@jsfe/core",
  "version": "0.0.3",
  "type": "module",
  "description": "Effortless forms, with standards.",
  "scripts": {
    "test": "vite dev & playwright test --ui",
    "build": "rm -rf ./dist/esm ; pnpm tsc ; pnpm build:styles",
    "build:cdn": "rm -rf ./dist/esm-min ; pnpm esbuild './lib/**/*.ts' --outdir=./dist/esm-min --outbase=./lib --minify",
    "build:styles": "echo 'export default `' > dist/esm/styles.js && pnpm sass --style=compressed --no-source-map lib/styles.scss | cut -c 2- >> dist/esm/styles.js && echo '`;' >> dist/esm/styles.js",
    "build:manifest": "pnpm run build:manifest:json && pnpm run build:manifest:md",
    "build:manifest:json": "cem analyze --globs lib/json-schema-form.ts --litelement",
    "build:manifest:md": "node scripts/cem-to-md.js",
    "publish:dry": "npm publish"
  },
  "customElements": "custom-elements.json",
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.8.4",
    "@playwright/test": "^1.38.1",
    "@types/json-schema": "^7.0.13",
    "@types/lodash-es": "^4.17.9",
    "json-schema-to-ts": "^2.9.2",
    "playwright": "^1.38.1",
    "sass": "^1.68.0",
    "typedoc": "^0.25.1",
    "typedoc-plugin-markdown": "^3.16.0",
    "typescript": "^5.2.2",
    "@custom-elements-manifest/to-markdown": "^0.1.0",
    "vite": "^4.4.9"
  },
  "exports": {
    ".": "./dist/esm/index.js",
    "./scss": "./styles.scss"
  },
  "files": [
    "./dist/esm"
  ],
  "dependencies": {
    "@shoelace-style/shoelace": "^2.8.0",
    "deepmerge": "^4.3.1",
    "lit": "^2.8.0",
    "lodash-es": "^4.17.21"
  },
  "license": "ISC",
  "author": {
    "name": "Julian Cataldo",
    "url": "https://www.juliancataldo.com",
    "email": "contact@juliancataldo.com"
  },
  "repository": {
    "url": "https://github.com/json-schema-form-element/core"
  }
}
